<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<schemaDescription xmlns="http://www.quartetfs.com"
                   xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.quartetfs.com ../activepivot-types.xsd">

    <!-- Selection of fields from the datastore -->
    <datastoreSelection baseStore="Portfolios">
        <fields>
            <!--Your fields here-->
            <field name="Date"/>
            <field name="Portfolio type"/>
            <field name="Number of stocks"/>
            <field name="Stock Symbol"/>
            <field name="Position Type"/>
            <field name="Sector Stock Symbol" expression="PortfoliosToSector/Stock Symbol"/>
            <field name="Sector Compagny Name" expression="PortfoliosToSector/Compagny Name"/>
            <field name="Sector" expression="PortfoliosToSector/Sector"/>
            <field name="Sector Industry" expression="PortfoliosToSector/Industry"/>
            <field name="Index Name" expression="PortfoliosToIndices/Index Name"/>
            <field name="Indices Counterparty" expression="PortfoliosToIndices/Counterparty"/>
            <field name="Indices Num" expression="PortfoliosToIndices/Num"/>
            <field name="Indices Stock Symbol" expression="PortfoliosToIndices/Stock Symbol"/>
            <field name="Indices Quantity" expression="PortfoliosToIndices/Quantity"/>
            <field name="Indices Trade Type" expression="PortfoliosToIndices/Trade Type"/>
            <field name="Indices Date" expression="PortfoliosToIndices/Date"/>
            <field name="Indices Value" expression="PortfoliosToIndices/Value"/>
            <field name="History Date" expression="PortfoliosToHistory/Date"/>
            <field name="History Open" expression="PortfoliosToHistory/Open"/>
            <field name="History High" expression="PortfoliosToHistory/High"/>
            <field name="History Low" expression="PortfoliosToHistory/Low"/>
            <field name="History Close" expression="PortfoliosToHistory/Close"/>
            <field name="History Volume" expression="PortfoliosToHistory/Volume"/>
            <field name="History Adj Close" expression="PortfoliosToHistory/Adj Close"/>
            <field name="History Stock Symbol" expression="PortfoliosToHistory/Stock Symbol"/>
        </fields>
    </datastoreSelection>

    <!-- List of the ActivePivot instances within that ActivePivot Schema -->
    <activePivots>
        <activePivot id="PerformanceAttributionCube">
            <pivotDescription resource="DESC-INF/PerformanceAttributionCube.xml"/>
        </activePivot>
    </activePivots>

</schemaDescription>