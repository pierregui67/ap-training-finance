<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<schemaDescription xmlns="http://www.quartetfs.com"
                   xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.quartetfs.com ../activepivot-types.xsd">

    <!-- Selection of fields from the datastore -->
    <datastoreSelection baseStore="BaseStore">
        <fields>

            <!-- History Store -->
            <field name="Open"			expression="BaseToHistory/Open" />
            <field name="High"          expression="BaseToHistory/High" />
            <field name="Low"           expression="BaseToHistory/Low" />
            <field name="Close"         expression="BaseToHistory/Close" />
            <field name="Volume"        expression="BaseToHistory/Volume" />
            <field name="AdjustedClose" expression="BaseToHistory/AdjustedClose" />

            <!-- Portfolios Store  -->
            <field name="StockType"			expression="BaseToPortfolios/PortfoliosDate" />
            <field name="StockNumber"          expression="BaseToPortfolios/StockNumber" />
            <field name="PositionType"           expression="BaseToPortfolios/PositionType" />

            <!-- Sector Store -->
            <field name="CompanyName"			expression="BaseToPortfolios/PortfoliosToSector/CompanyName" />
            <field name="Sector"          expression="BaseToPortfolios/PortfoliosToSector/Sector" />
            <field name="Industry"           expression="BaseToPortfolios/PortfoliosToSector/Industry" />


            <!-- BaseStore -->
            <field name="StockSymbol"/>
            <field name="Date"/>

        </fields>


    </datastoreSelection>

    <!-- List of the ActivePivot instances within that ActivePivot Schema -->
    <activePivots>

        <activePivot id="PerformanceAttributionCube">
            <pivotDescription resource="DESC-INF/PerformanceAttributionCube.xml"/>
        </activePivot>

    </activePivots>

</schemaDescription>