<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<schemaDescription xmlns="http://www.quartetfs.com"
                   xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.quartetfs.com ../activepivot-types.xsd">

    <!-- Selection of fields from the datastore -->
    <datastoreSelection baseStore="Portfolios">
        <fields>

            <!--Portfolios Fields-->
            <field name="Date"/>
            <field name="StockSymbol"/>
            <field name="NbOfStocks"/>
            <field name="PortfolioType"/>
            <field name="PositionType"/>

            <!-- Stocks History Fields -->
            <field name="Open" expression="PortfoliosToHistory/Open"/>
            <field name="High" expression="PortfoliosToHistory/High"/>
            <field name="Low" expression="PortfoliosToHistory/Low"/>
            <field name="Close" expression="PortfoliosToHistory/Close"/>
            <field name="Volume" expression="PortfoliosToHistory/Volume"/>
            <field name="AdjClose" expression="PortfoliosToHistory/AdjClose"/>

            <!-- Sectors Fields-->
            <field name="CompanyName" expression="PortfoliosToSectors/CompanyName"/>
            <field name="Sector" expression="PortfoliosToSectors/Sector"/>
            <field name="Industry" expression="PortfoliosToSectors/Industry"/>

        </fields>
    </datastoreSelection>


    <!-- List of the ActivePivot instances within that ActivePivot Schema -->
    <activePivots>

        <activePivot id="PerformanceAttributionCube">
            <pivotDescription resource="DESC-INF/PerformanceAttributionCube.xml"/>
        </activePivot>

    </activePivots>

</schemaDescription>