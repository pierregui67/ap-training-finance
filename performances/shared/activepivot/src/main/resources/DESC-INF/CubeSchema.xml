<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<schemaDescription xmlns="http://www.quartetfs.com"
                   xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.quartetfs.com ../activepivot-types.xsd">

    <!-- Selection of fields from the datastore -->
    <datastoreSelection baseStore="Portfolios">
        <fields>

            <!--Portfolio fields-->
            <field name="Date" expression="Date"/>
            <field name="PortfolioType" expression="PortfolioType"/>
            <field name="NumberStocks" expression="NumberStocks"/>
            <field name="StockSymbol" expression="StockSymbol"/>
            <field name="PositionType" expression="PositionType"/>

            <!-- Sectors fields -->
            <field name="CompanyName" expression="PortfoliosToSectors/CompanyName" />
            <field name="Sector" expression="PortfoliosToSectors/Sector" />
            <field name="Industry" expression="PortfoliosToSectors/Industry" />


            <!-- Stock Price History fields -->
            <field name="Open" expression="PortfoliosToStockPriceHistory/Open" />
            <field name="HighValue" expression="PortfoliosToStockPriceHistory/HighValue" />
            <field name="LowValue" expression="PortfoliosToStockPriceHistory/LowValue" />
            <field name="Close" expression="PortfoliosToStockPriceHistory/Close" />
            <field name="Volume" expression="PortfoliosToStockPriceHistory/Volume" />
            <field name="AdjClose" expression="PortfoliosToStockPriceHistory/AdjClose" />

            <!-- indices fields -->
            <field name="IndexName" expression="PortfoliosToIndices/IndexName" />
            <field name="StockSymbolI" expression="PortfoliosToIndices/StockSymbol" />


        </fields>
    </datastoreSelection>

    <!-- List of the ActivePivot instances within that ActivePivot Schema -->
    <activePivots>

        <activePivot id="PerformanceAttributionCube">
            <pivotDescription resource="DESC-INF/PerformanceAttributionCube.xml"/>
        </activePivot>

    </activePivots>

</schemaDescription>