<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<schemaDescription xmlns="http://www.quartetfs.com"
                   xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.quartetfs.com ../activepivot-types.xsd">

    <!-- Selection of fields from the datastore -->
    <datastoreSelection baseStore="PortfolioStore">
        <fields>

            <!--Your fields here-->
            <field name="Date"/>
            <field name="PortfolioType"/>
            <field name="Quantity"/>
            <field name="PositionType"/>
            <field name="StockSymbol"/>


            <field name="OpenPrice" expression="PortfolioStoreToHistoryStore/OpenPrice" />
            <field name="HighPrice" expression="PortfolioStoreToHistoryStore/HighPrice"/>
            <field name="LowPrice" expression="PortfolioStoreToHistoryStore/LowPrice"/>
            <field name="ClosePrice" expression="PortfolioStoreToHistoryStore/ClosePrice"/>
            <field name="Volume" expression="PortfolioStoreToHistoryStore/Volume"/>

            <field name="Sector" expression="PortfolioStoreToHistoryStore/HistoryStoreToSectorStore/Sector"/>
            <field name="Industry" expression="PortfolioStoreToHistoryStore/HistoryStoreToSectorStore/Industry"/>
            <field name="Company" expression="PortfolioStoreToHistoryStore/HistoryStoreToSectorStore/Company"/>


        </fields>
    </datastoreSelection>

    <!-- List of the ActivePivot instances within that ActivePivot Schema -->
    <activePivots>

        <activePivot id="PerformanceAttributionCube">
            <pivotDescription resource="DESC-INF/PerformanceAttributionCube.xml"/>
        </activePivot>

    </activePivots>

</schemaDescription>