<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<pivotDescription xmlns="http://www.quartetfs.com"
                  xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://www.quartetfs.com activepivot-types.xsd">

    <!-- Selection of the aggregate provider -->
    <aggregateProvider pluginKey="JUST_IN_TIME">

        <partialProvider pluginKey="BITMAP">
            <hierarchies include="true">
                <hierarchy name="PortfolioType" dimension="PortfolioType" level="PortfolioType"/>
                <hierarchy name="Date" dimension="Time" level="Date"/>
                <hierarchy name="PortfolioType" dimension="PortfolioType" level="PortfolioType"/>
            </hierarchies>
            <measures>
                <measure name="PotfolioValue"/>
                <measure name="PeriodReturn" />
                <measure name="CumulativeReturn" />
                <measure name="PerformanceDiff1" />
                <measure name="PerformanceDiff2" />
                <measure name="PerformanceRelative1" />
                <measure name="PerformanceRelative2" />
            </measures>
        </partialProvider>

        <partialProvider pluginKey="BITMAP">
            <hierarchies include="false">
                <hierarchy name="StockSymbol" dimension="StockSymbol" level="StockSymbol"/>
                <hierarchy name="SectorClassification" dimension="SectorClassification" level="Company"/>
                <hierarchy name="PositionType" dimension="PositionType" level="PositionType"/>
            </hierarchies>
            <measures>
                <measure name="PeriodReturn" />
                <measure name="CumulativeReturn" />
                <measure name="PerformanceDiff1" />
                <measure name="PerformanceDiff2" />
                <measure name="PerformanceRelative1" />
                <measure name="PerformanceRelative2" />
            </measures>
        </partialProvider>

    </aggregateProvider>

    <!-- true: Activation of factless hierarchies, across all dimensions -->
    <autoFactlessHierarchies>true</autoFactlessHierarchies>

    <!-- Definition of the dimensions -->
    <dimensions>
        <import resource="DESC-INF/Dimensions.xml"/>
    </dimensions>


    <!-- Definition of the measures -->
    <measures>
        <import resource="DESC-INF/Measures.xml"/>
    </measures>

    <sharedContexts>
        <!-- my custom default context value for currency -->
        <CurrencyContextValue currency="EUR" />

        <!-- Query maximum execution time (before timeout cancellation) -->
        <queriesTimeLimit seconds="60"/>

        <!-- Contextual configuration of the MDX engine -->
        <mdxContext>
            <formatters>
                <formatter uniqueName="[Measures].[CumulativeReturn]"   format="DOUBLE[#,###.00]"/>
                <formatter uniqueName="[Measures].[PeriodReturn]"       format="DOUBLE[#,###.00]" />
                <formatter uniqueName="[Measures].[ClosePrice]"         format="DOUBLE[#,###.00]" />
                <formatter uniqueName="[Measures].[OpenPrice]"          format="DOUBLE[#,###.00]" />
                <formatter uniqueName="[Measures].[HighPrice]"          format="DOUBLE[#,###.00]" />
                <formatter uniqueName="[Measures].[LowPrice]"           format="DOUBLE[#,###.00]" />
                <formatter uniqueName="[Measures].[Volume.Sum]"         format="DOUBLE[#,###.00]" />
                <formatter uniqueName="[Measures].[Quantity]"           format="DOUBLE[#,###]"/>
                <formatter uniqueName="[Measures].[RelativeWeight]"     format="DOUBLE[#,###.00]" />
                <formatter uniqueName="[Measures].[PortfolioValue]"     format="DOUBLE[#,###.00]" />
                <formatter uniqueName="[Measures].[Performance]"        format="DOUBLE[#,###.00]" />
                <formatter uniqueName="[Measures].[PerformanceRelative1]"        format="DOUBLE[#.00]" />
                <formatter uniqueName="[Measures].[PerformanceRelative2]"        format="DOUBLE[#.00]" />
                <formatter uniqueName="[Measures].[PerformanceDiff1]"        format="DOUBLE[#.00]" />
                <formatter uniqueName="[Measures].[PerformanceDiff2]"        format="DOUBLE[#.00]" />
            </formatters>
        </mdxContext>
    </sharedContexts>

</pivotDescription>
