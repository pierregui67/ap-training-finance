<?xml version = "1.0" encoding = "UTF-8"?>
<jaxb-intros xmlns="http://www.jboss.org/xsd/jaxb/intros">

    <!-- Namespace declaration -->
    <XmlSchema namespace="http://www.quartetfs.com" elementFormDefault="QUALIFIED" />

    <!-- Mapping of the custom 'CurrencyContextValue' context value -->
    <Class name="com.qfs.sandbox.context.impl.CurrencyContextValue">
        <XmlRootElement name="referenceCurrency" />
        <Method name="getCurrency">
            <XmlAttribute name="currency" required="true" />
        </Method>
    </Class>

</jaxb-intros>